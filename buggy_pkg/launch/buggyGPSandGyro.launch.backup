<launch>

	<arg name="node_name" default="ublox_gps"/>
	<arg name="param_file_name" doc="name of param file, e.g. rover" default="c94_m8p_rover"/>
	<arg name="output" default="screen" />
	<arg name="respawn" default="true" />
	<arg name="respawn_delay" default="30" />
	<arg name="clear_params" default="true" />

	<group ns="Buggy">
		<node pkg="buggy_pkg" name="BuggyStore" type="buggy_mainListener.py" output="$(arg output)"/>
		<node pkg="buggy_pkg" name="BuggyGyro" type="MPU6050_talker.py"/>
	</group>

	<group ns="ublox_gps">
		<node pkg="ublox_gps" type="ublox_gps" name="$(arg node_name)"
        			output="$(arg output)" 
        			clear_params="$(arg clear_params)"
        			respawn="$(arg respawn)" 
        			respawn_delay="$(arg respawn_delay)">
    			<rosparam command="load" 
              			file="$(find ublox_gps)/config/$(arg param_file_name).yaml" />
  		</node>
	</group>

</launch>
